#!/usr/bin/env node
const mongo = require('mongoose');

const [, , ...args] = process.argv;
if (args.length > 0) {
    console.log(`Args: ${args}`);
}
// Вынести в bootstrap
let con = mongo.connect('mongodb://127.0.0.1/myapp', {
    useNewUrlParser: true,
    useUnifiedTopology: true,
    useFindAndModify: false
});

module.exports = {
  args,
  con
};
